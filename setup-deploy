#!/usr/bin/env bash

set -euo pipefail

BOOK_DIR="$(basename "$PWD")"
REPO_URL="$(git remote get-url origin)"
DEPLOY_DIR="/tmp/book-deploy"

# Ensure we're in a Git repo
if ! git rev-parse --is-inside-work-tree >/dev/null 2>&1; then
  echo "âŒ Error: not inside a Git repository."
  exit 1
fi

# Build the book
mdbook build

# Clean up old deploy dir if it exists
rm -rf "$DEPLOY_DIR"

# Create an orphan gh-pages branch in a temporary directory
mkdir -p "$DEPLOY_DIR"
pushd "$DEPLOY_DIR" >/dev/null

git init
git checkout --orphan gh-pages
cp -r "$OLDPWD/book/"* .
touch .nojekyll  # prevents GitHub from treating it as a Jekyll site
git add .
git commit -m "Initial deploy of $BOOK_DIR to GitHub Pages"
git remote add origin "$REPO_URL"
git push -u origin gh-pages

popd >/dev/null
rm -rf "$DEPLOY_DIR"

echo "âœ… GitHub Pages branch 'gh-pages' created and deployed."
echo "ðŸ‘‰ Go to your GitHub repo settings â†’ Pages â†’ set source to 'gh-pages' branch, root directory."
