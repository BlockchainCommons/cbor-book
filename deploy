#!/usr/bin/env bash

set -euo pipefail

BOOK_DIR="$(basename "$PWD")"
DEPLOY_DIR="/tmp/book-deploy"

# Ensure we are in a git repo
if ! git rev-parse --is-inside-work-tree >/dev/null 2>&1; then
  echo "âŒ Not inside a Git repository."
  exit 1
fi

# Ensure clean working directory
if [[ -n "$(git status --porcelain)" ]]; then
  echo "âŒ Working directory is not clean. Please commit or stash changes first."
  exit 1
fi

# Ensure gh-pages exists on remote
if ! git ls-remote --exit-code --heads origin gh-pages >/dev/null; then
  echo "âŒ The 'gh-pages' branch does not exist on origin. Run './setup-deploy' first."
  exit 1
fi

# Make sure we have a local ref to origin/gh-pages
if ! git show-ref --verify --quiet refs/remotes/origin/gh-pages; then
  echo "ðŸ”„ Fetching 'gh-pages' from origin..."
  git fetch origin gh-pages
fi

# Build the book
echo "ðŸ“– Building mdBook..."
mdbook build

# Remove any old worktree (if forcibly left)
rm -rf "$DEPLOY_DIR"

# Add worktree cleanly
echo "ðŸŒ¿ Creating worktree for gh-pages..."
git worktree add -B gh-pages "$DEPLOY_DIR" origin/gh-pages

# Compare built book to current deploy target
echo "ðŸ” Checking for changes..."
if diff -qr book "$DEPLOY_DIR" --exclude=.git --exclude=.nojekyll >/dev/null; then
  echo "ðŸŸ¡ No changes to publish. Skipping deployment."
  git worktree remove "$DEPLOY_DIR"
  exit 0
fi

# Copy over book output
echo "ðŸ“¦ Syncing new content..."
rsync -a --delete book/ "$DEPLOY_DIR/"
touch "$DEPLOY_DIR/.nojekyll"

# Commit and push
echo "ðŸš€ Committing and pushing changes..."
pushd "$DEPLOY_DIR" >/dev/null
git add .
git commit -m "Deploy $BOOK_DIR: $(date -u +"%Y-%m-%d %H:%M:%S UTC")"
git push origin gh-pages
popd >/dev/null

# Clean up worktree
echo "ðŸ§¹ Cleaning up worktree..."
git worktree remove "$DEPLOY_DIR"

echo "âœ… Successfully deployed $BOOK_DIR to GitHub Pages."
